    &__bottom
        color $darkest-gray
        background-color $white
        padding 30px
        border-radius: 0 0 var(--br) var(--br)
    &__title.mobile
        display: none
    &__descr
        margin-bottom 25px
    &__privacy
        text-align: center
    &--thanks 
        position relative
        background-color $white
        background-image url('../img/Wait for the call.png');
        background-repeat no-repeat
        background-position top 30px center
        background-size 253px 253px
        padding 30px
        padding-top 313px
        border-radius var(--br)
        text-align: center
        & .h2-header
            margin-bottom var(--gap-xs)
        & .text-14 
            color $darkest-gray
            margin-bottom var(--gap-m)
        & .popup__confirm-btn
            width 250px

.form
    &__input-wrapper
        width 100%
        display inline-block
        margin-bottom var(--gap-xs)
        &:nth-child(2)
            margin-bottom var(--gap-m)
        & .is-label-invalid
            font-size: 10px;
            font-weight: 400;
            line-height: 160%;
            margin-top 5px
    &__label
        color $darkest-gray
        margin-bottom 5px
    &__reqiured-sign
        color $error-color
    &__input
        width 100%
        color $text-color
        caret-color $dark-blue
        background-color $gray
        padding var(--gap-xs) var(--gap-xs) 12px
        border: none
        border-radius: var(--br-xs)
        outline: 1.5px solid transparent
        tr()
        &:hover
            background-color $dark-gray
        &:focus
            background-color transparent
            outline: 1.5px solid $text-color
        &.is-invalid
            outline-color: $error-color
    &__btn
        width 100%
        margin-bottom var(--gap-xs)


@import './media.styl'