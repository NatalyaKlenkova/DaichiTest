
@import './vars.styl'

@font-face 
    font-family: 'GothamPro';
    src: local('GothamPro Light'), local('GothamPro-Light'),
        url('../fonts/GothamPro-Light.woff2') format('woff2'),
        url('../fonts/GothamPro-Light.woff') format('woff');
    font-weight: 300;
    font-style: normal;
    font-display: swap

@font-face
    font-family: 'GothamPro';
    src: local('GothamPro Regular'), local('GothamPro'),
        url('../fonts/GothamPro.woff2') format('woff2'),
        url('../fonts/GothamPro.woff') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap

@font-face
    font-family: 'GothamPro';
    src: local('GothamPro Medium'), local('GothamPro-Medium'),
        url('../fonts/GothamPro-Medium.woff2') format('woff2'),
        url('../fonts/GothamPro-Medium.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap
    
@font-face
    font-family: 'SuisseIntl';
    src: local('SuisseIntl Regular'), local('SuisseIntl-Regular'),
        url('../fonts/SuisseIntl-Regular.woff2') format('woff2'),
        url('../fonts/SuisseIntl-Regular.woff') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap


@font-face
    font-family: 'SuisseIntl';
    src: local('SuisseIntl Medium'), local('SuisseIntl-Medium'),
        url('../fonts/SuisseIntl-Medium.woff2') format('woff2'),
        url('../fonts/SuisseIntl-Medium.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap




tr(){
	transition all 0.2s ease-in-out
}

html
	box-sizing border-box
	overflow-x hidden

*,
*::after,
*::before
	box-sizing inherit

body
    min-width 320px
    background-color $white
    font-family 'SuisseIntl', sans-serif
    font-weight 400
    color $text-color
    overflow-x hidden

// Global

.container
    width 100%
    max-width 1440px
    padding 0 40px
    margin 0 auto

.list-reset 
    list-style none
    padding 0
    margin 0

.btn-reset
    background-color transparent
    padding 0
    border none
        
a
    text-decoration none
    color $dark-blue
    tr()
    &:hover
        color $blue

img
    max-width 100%

.visually-hidden 
    position absolute
    width 1px
    height 1px
    margin -1px
    border 0
    padding 0
    clip rect(0 0 0 0)
    overflow hidden

.stop-scroll 
    overflow-y hidden
    overscroll-behavior contain

.h2-header,
.h2-header p
    font-size: var(--h2);
    font-weight: 500;
    line-height: 120%;
    margin 0
.h3-header
    font-size: var(--h3);
    font-weight: 500;
    line-height: 120%;
    margin 0
.h5-header
    font-size: var(--h5);
    font-weight: 500;
    line-height: 120%;
    margin 0
.text-14
    font-size: var(--text-14);
    font-weight: 400;
    line-height: 160%;
    margin 0
.text-12
    font-size: var(--text-12);
    font-weight: 400;
    line-height: 160%;
    margin 0
.colored
    color $dark-blue
// Btns
.main-btn
    color $white
    font-size: var(--h5);
    font-weight: 500;
    line-height: 120%;
    background-color $dark-blue
    padding var(--gap-xs) var(--gap-sm)
    border-radius: var(--br-xs)
    cursor pointer
    tr()
    &:hover
        background-color $blue
    &.disabled,
    &[disabled],
    &:disabled
        background-color $dark-gray
        pointer-events none

// Gallery
.fotorama
    &__nav
        text-align: unset
    &__stage
        & .fotorama__img
            border-radius var(--br) !important
    &__nav
        & .fotorama__thumb,
        & .fotorama__img
            border-radius var(--br-sm) !important
    &__thumb-border
        background-image none
        border-color $text-color
        border-radius var(--br-sm) !important

.fotorama:not(.fotorama--fullscreen) .fotorama__stage
    margin-bottom 24px


// Product
.product
    padding 64px 0
    &__container
        display: flex
        gap var(--gap)
    &__gallery
        width 34%
        min-width 34%
        overflow: hidden
    &__img
        border-radius var(--br)
    &__title
        margin-bottom var(--gap-xs)
    &__fav
        position relative
        color $darkest-gray
        padding-left 34px
        margin-bottom var(--gap-m)
        cursor pointer
        tr()
        &::before
            background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M15.7 4C18.87 4 21 6.98 21 9.76C21 15.39 12.16 20 12 20C11.84 20 3 15.39 3 9.76C3 6.98 5.13 4 8.3 4C10.12 4 11.31 4.91 12 5.71C12.69 4.91 13.88 4 15.7 4Z' stroke='%236C7684' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
        &::after
            opacity 0
            background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M15.7 4C18.87 4 21 6.98 21 9.76C21 15.39 12.16 20 12 20C11.84 20 3 15.39 3 9.76C3 6.98 5.13 4 8.3 4C10.12 4 11.31 4.91 12 5.71C12.69 4.91 13.88 4 15.7 4Z' stroke='%231a1a1a' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
        &::before,
        &::after
            position: absolute
            top 0
            left 0
            content: ''
            width var(--w)
            height var(--w)
            background-repeat no-repeat
            background-size contain
            tr()
        & p
            margin-top 5px
        &:hover
            color $text-color
            &::before
                opacity 0
            &::after
                opacity 1
    &__fav.active,
    &__fav.active:hover
        color $dark-blue
        &::before
            background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M15.7 4C18.87 4 21 6.98 21 9.76C21 15.39 12.16 20 12 20C11.84 20 3 15.39 3 9.76C3 6.98 5.13 4 8.3 4C10.12 4 11.31 4.91 12 5.71C12.69 4.91 13.88 4 15.7 4Z' fill='%235EA9FF'/%3E%3C/svg%3E%0A");
            opacity 1
        &::after
            opacity 0
    &__info
        display: flex
        justify-content: space-between
        gap var(--gap)
        margin-bottom var(--gap-m)

.product-char
    width 47%
    &__title
        margin-bottom 10px
    &__item
        display: flex
        justify-content: space-between
        align-items: flex-end
        &:not(:last-child)
            margin-bottom 5px
    &__dots
        flex-grow 1
        height: 13px;
        margin: 0 10px;
        margin-bottom 5px
        background-image: linear-gradient(to right, #6c7684 10%, rgba(255, 255, 255, 0) 0%);
        background-position: bottom;
        background-size: 5px 1px;
        background-repeat: repeat-x;
    &__name
        max-width: 65%
        color $darkest-gray

.product-price
    width 46%
    &__val
        background-color $white
        box-shadow: $box-shadow
        padding 30px
        border-radius var(--br)
        margin-bottom var(--gap-sm)

.product-feedback
    position relative
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color $light-blue
    padding var(--gap-sm) var(--gap-xs) var(--gap-sm) 106px
    border-radius var(--br)
    cursor pointer
    tr()
    &:hover
        background-color $blue
    &::before
        position: absolute
        width: 98px
        height auto
        top -22px
        left 0
        bottom 0
        content ''
        background-image: url('../img/feedback-bg.png')
        background-repeat no-repeat
        background-size contain
        background-position bottom 
    &::after
        content ''
        min-width var(--w)
        min-height var(--w)
        background-image url("data:image/svg+xml,%3Csvg width='24' height='25' viewBox='0 0 24 25' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 16.5L14 12.5L10 8.5' stroke='%236C7684' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
        background-repeat no-repeat
        background-size contain
    &__title
        margin-bottom 4px

// Accordion
.accordion
    &__item
        border 1px solid $light-gray
    &__top
        display: flex
        justify-content: space-between
        align-items: center
        padding 20px
        cursor pointer
        tr()
        &::after
            content ''
            width var(--w)
            height var(--w)
            background-image url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 10L12 14L16 10' stroke='%236C7684' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
            background-repeat no-repeat
            background-size contain
            tr()
        &:hover
            opacity .8
    &__top.ui-state-active
        &::after
            transform: rotate(180deg)
    &__title
        max-width 80%
    &__content
        padding 20px
        padding-top 5px
    &__descr
        &:not(:last-child)
            margin-bottom 28px

.ui-accordion-header-icon
    display: none

// Popup
.product__overlay
    position: fixed
    top 0
    left 0
    width: 100vw
    height 100vh
    display: none
    justify-content: center
    align-items: center
    background: rgba(0,0,0,.25);
   &.active 
    display: flex
.popup
    display none
    width: 690px
    box-shadow: $box-shadow
    tr()
    &.active 
        display: block
    &__head
        position relative
        background-color $light-blue
        background url('../img/feedback-bg.png'), $light-blue
        background-repeat no-repeat
        background-size contain
        background-position bottom right 108px
        padding 30px
        border-radius: var(--br) var(--br) 0 0
    &__close-btn
        position: absolute
        top 30px
        right 30px
        width var(--w)
        height var(--w)
        background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5 5L19 19' stroke='%236C7684' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3Cpath d='M19 5L5 19' stroke='%236C7684' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
        background-repeat no-repeat
        cursor: pointer
        tr()
        &:hover
            opacity .8
